rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow list: if request.auth != null;
    }

    match /bloodRequests/{bloodRequestId} {
      allow create: if request.auth != null;
      allow read, list: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    match /donationMatches/{donationMatchId} {
      allow create: if request.auth != null;
      allow read, list: if request.auth != null;
      
      function isRequestOwner() {
        let requestDoc = get(/databases/$(database)/documents/bloodRequests/$(resource.data.requestId));
        return request.auth.uid == requestDoc.data.userId;
      }
      function isDonor() {
        return request.auth.uid == resource.data.donorId;
      }
      allow update: if isRequestOwner() || isDonor();
      allow delete: if false;
    }
    
    match /donations/{donationId} {
      allow create: if request.auth != null;
      allow get: if request.auth.uid == resource.data.donorId;
      allow list: if request.auth != null && request.query.where.get('donorId', ['==', request.auth.uid]).size() == 1;
      allow update, delete: if false;
    }

    match /notifications/{notificationId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth.uid == resource.data.userId;
      // Secure list queries by ensuring they filter by the user's own ID
      allow list: if request.auth != null && request.query.get("userId") == request.auth.uid;
      allow delete: if false;
    }
  }
}
